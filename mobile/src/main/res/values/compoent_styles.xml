<?xml version="1.0" encoding="utf-8"?>

<!-- 各种MD风格的组件的公用样式 -->
<resources>

    <color name="colorPrimaryQuarter">#3303A9F4</color>
    <color name="colorPrimaryHalf">#9003A9F4</color>
    <color name="colorControlNormalHalf">#9078909C</color>
    <color name="colorControlActivatedHalf">#9003A9F4</color>
    <color name="colorAccentQuarter">#3300E5FF</color>
    <color name="colorAccentHalf">#9000E5FF</color>
    <color name="colorSwitchThumbNormal">#FF78909C</color>
    <color name="colorControlNormal">#FF78909C</color>

    <!-- 无背景的Button -->
    <style name="NoBgRaiseWaveButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@null</item>
        <item name="rd_rippleColor">@color/c1</item>
        <item name="rd_cornerRadius">4dp</item>
        <item name="rd_delayClick">untilRelease</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- 蓝色背景的Button -->
    <style name="RaiseWaveColorButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/bg_button</item>
        <item name="rd_rippleColor">#33000000</item>
        <item name="rd_leftPadding">1dp</item>
        <item name="rd_topPadding">1dp</item>
        <item name="rd_rightPadding">1dp</item>
        <item name="rd_bottomPadding">2dp</item>
        <item name="rd_delayClick">untilRelease</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <!--CheckBox样式-->
    <style name="CheckBoxDrawable" parent="Material.Drawable.CheckBox">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#FF000000</item>
        <item name="cbd_strokeColor">@color/primary</item>
    </style>

    <!-- RadioButton样式 -->
    <style name="RadioButtonDrawable" parent="Material.Drawable.RadioButton">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#FF000000</item>
        <item name="rbd_strokeColor">@color/primary</item>
    </style>

    <!-- Switch样式 -->
    <style name="LightSwitch" parent="Material.Widget.Switch">
        <item name="sw_trackColor">@drawable/color_track_light</item>
        <item name="sw_thumbColor">@drawable/color_thumb_light</item>
    </style>

    <!-- Slider 样式-->
    <style name="LightSliderDiscrete" parent="Material.Widget.Slider.Discrete">
        <item name="sl_primaryColor">@color/primary</item>
        <item name="sl_stepValue">10</item>
    </style>

    <!-- EditText样式 -->
    <style name="LightEditText" parent="Material.Widget.EditText.Light">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
        <item name="android:textColorHint">@color/c4</item>
        <item name="et_dividerColor">@drawable/color_divider_light</item>
        <item name="et_labelTextColor">@drawable/color_label_light</item>
        <item name="et_supportTextErrorColor">#FFFF0000</item>
        <item name="et_dividerErrorColor">#FFFF0000</item>
        <item name="et_dividerPadding">5dp</item>
        <item name="et_labelPadding">3dp</item>
        <item name="et_supportPadding">5dp</item>
        <item name="et_dividerHeight">1px</item>
    </style>

    <style name="LightTimeStyle" parent="Material.App.Dialog.TimePicker.Light">
        <item name="tp_headerHeight">50dp</item>
    </style>

    <style name="DatePickerStyle" parent="Material.App.Dialog.DatePicker.Light"></style>


    <!-- 圆形进度条样式 -->
    <style name="LightCircularProgressDrawable" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/c11</item>
    </style>

    <style name="LightCircularProgressView">
        <item name="pv_autostart">false</item>
        <item name="pv_circular">true</item>
        <item name="pv_progressStyle">@style/LightCircularProgressDrawable</item>
        <item name="pv_progressMode">indeterminate</item>
    </style>

    <style name="Custom_SnackBar_Style" parent="Material.Widget.SnackBar.Mobile">
        <item name="sb_width">match_parent</item>
        <item name="sb_height">48dp</item>
        <item name="sb_singleLine">true</item>

    </style>

</resources>