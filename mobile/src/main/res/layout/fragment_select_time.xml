<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/out_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#99000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/c11"
        android:orientation="horizontal">


        <com.youyou.uuelectric.renter.Utils.view.RippleView
            android:id="@+id/btn_cancel"
            android:layout_width="56dp"
            android:layout_height="44dp"
            android:background="@color/c11"
            app:rv_color="@color/c1"
            app:rv_type="rectangle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/cancel_text"
                android:textColor="@color/c1"
                android:textSize="@dimen/f3" />

        </com.youyou.uuelectric.renter.Utils.view.RippleView>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/c9"
            android:textSize="@dimen/f4"
            android:visibility="invisible" />

        <com.youyou.uuelectric.renter.Utils.view.RippleView
            android:id="@+id/btn_sure"
            android:layout_width="56dp"
            android:layout_height="44dp"
            android:background="@color/c11"
            app:rv_color="@color/c1"
            app:rv_type="rectangle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/sure_text"
                android:textColor="@color/c1"
                android:textSize="@dimen/f3" />

        </com.youyou.uuelectric.renter.Utils.view.RippleView>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@+id/selfToolbar"
        android:background="@color/c5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c11"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <kankan.wheel.widget.WheelView
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/hour"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/mins"
            android:layout_width="48dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>