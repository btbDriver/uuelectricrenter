<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/navselect_rela_title"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/navselect_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择导航"
            android:textSize="16dp"
            android:textColor="@color/c3"
            android:layout_marginLeft="@dimen/s4"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c6"
        android:layout_below="@+id/navselect_rela_title"
        />

    <com.youyou.uuelectric.renter.Utils.view.RippleView
        android:id="@+id/navselect_rela_baidu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:rv_color="@color/c1"
        app:rv_type="rectangle"
        android:layout_below="@+id/navselect_rela_title"
        >
        <ImageView
            android:id="@+id/navselect_icon_baidu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@mipmap/icon"
            android:layout_marginLeft="@dimen/s4"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/navselect_name_baidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="百度地图"
            android:textSize="@dimen/s4"
            android:textColor="@color/c3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s4"
            android:layout_toRightOf="@+id/navselect_icon_baidu"
            />
    </com.youyou.uuelectric.renter.Utils.view.RippleView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c6"
        android:layout_marginLeft="@dimen/s4"
        android:layout_below="@+id/navselect_rela_baidu"
        />

    <com.youyou.uuelectric.renter.Utils.view.RippleView
        android:id="@+id/navselect_rela_gaode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/navselect_rela_baidu"
        app:rv_color="@color/c1"
        app:rv_type="rectangle"
        >
        <ImageView
            android:id="@+id/navselect_icon_gaode"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@mipmap/icon"
            android:layout_marginLeft="@dimen/s4"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/navselect_name_gaode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高德地图"
            android:textSize="@dimen/s4"
            android:textColor="@color/c3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s4"
            android:layout_toRightOf="@+id/navselect_icon_gaode"
            />
    </com.youyou.uuelectric.renter.Utils.view.RippleView>
</RelativeLayout>
