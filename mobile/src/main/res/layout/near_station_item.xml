<?xml version="1.0" encoding="utf-8"?>
<com.youyou.uuelectric.renter.Utils.view.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
                                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                                    android:id="@+id/rv_root"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:paddingLeft="@dimen/s3"
                                                    android:paddingTop="@dimen/s3"
                                                    app:rv_color="@color/c1"
                                                    app:rv_type="rectangle">

    <RelativeLayout
        android:id="@+id/iv_icon"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/s2">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_car_addresslist"/>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_number_addresslist"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/c11"
            android:textSize="12dp"/>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/s3"
        android:layout_toRightOf="@id/iv_icon"
        android:orientation="horizontal">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dp"
            android:ellipsize="start"
            android:singleLine="true"
            android:text="大悦城停车场大大悦城停 "
            android:textColor="@color/c3"
            android:textSize="15dp"
            />


        <!--<TextView
            android:id="@+id/tv_return"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/s1"
            android:background="@drawable/return_text_bg_shape"
            android:gravity="center"
            android:text="还"
            android:textColor="@color/c11"
            android:textSize="@dimen/f6"
            />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:layout_marginRight="@dimen/s3"
        android:layout_marginTop="@dimen/s1"
        android:layout_toRightOf="@id/iv_icon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/s2"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="具体停车位置具体停车位置具体停车位置具体停车位置具体停车位置具体停车位置"
            android:textColor="@color/c4"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.7km"
            android:textColor="@color/c1"
            android:textSize="@dimen/f4"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_middle"
        android:layout_marginRight="@dimen/s3"
        android:layout_marginTop="@dimen/s3"
        android:layout_toRightOf="@id/iv_icon"
        android:background="@color/c5"/>


</com.youyou.uuelectric.renter.Utils.view.RippleView>