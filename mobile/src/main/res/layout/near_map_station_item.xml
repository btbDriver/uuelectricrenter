<?xml version="1.0" encoding="utf-8"?>
<com.youyou.uuelectric.renter.Utils.view.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/s2"
    android:paddingTop="@dimen/s3"
    app:rv_color="@color/c1"
    app:rv_type="rectangle">

    <RelativeLayout
        android:id="@+id/iv_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="@dimen/s1"
        android:layout_marginTop="@dimen/s1"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/iv_marker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_location_number_bigger" />

        <TextView
            android:id="@+id/tv_marker_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1.5dp"
            android:gravity="center_horizontal"
            android:text="1"
            android:textColor="@color/c1"
            android:textSize="@dimen/f7" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/s3"
        android:layout_toRightOf="@id/iv_icon"
        android:orientation="horizontal">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:ellipsize="start"
            android:gravity="start"
            android:singleLine="true"
            android:text="大停车场大悦城停车场大悦城停车场"
            android:textColor="@color/c3"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_remote_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textColor="@color/c8"
            android:textSize="@dimen/f5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:layout_marginRight="@dimen/s3"
        android:layout_marginTop="@dimen/s1"
        android:layout_toRightOf="@id/iv_icon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/s2"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="具体停车位置具体停车位置具体停车位置具体停车位置具体停车位置具体停车位置"
            android:textColor="@color/c4"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.7km"
            android:textColor="@color/c1"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_middle"
        android:layout_marginRight="@dimen/s3"
        android:layout_marginTop="@dimen/s3"
        android:layout_toRightOf="@id/iv_icon"
        android:background="@color/c6" />


</com.youyou.uuelectric.renter.Utils.view.RippleView>