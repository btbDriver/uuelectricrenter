<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/s2"
    android:layout_marginRight="@dimen/s2"
    android:background="@drawable/confirm_car_round_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@mipmap/ic_pic_usecar_popup" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/dayclear_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试小友用车提醒"
                android:textColor="@color/c3"
                android:textSize="@dimen/f3"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/dayclear_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试内容"
                android:textSize="@dimen/f4"
                android:textColor="@color/c3"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/dayclear_fourhour_btn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/confirm_dialog_btn_bg"
            android:text="@string/fourhour_returncar"
            android:textColor="@color/c1"
            android:textSize="@dimen/f3"
            />

        <Button
            android:id="@+id/dayclear_recharge_btn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/confirm_dialog_btn_dark_bg"
            android:text="@string/goto_recharge"
            android:textColor="@color/c11"
            android:textSize="@dimen/f3"
            />

    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="30dp" />
</LinearLayout>